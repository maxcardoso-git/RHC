# ========================================
# RHC (Resource Health Checker) - Environment Variables
# ========================================

# Server Configuration
PORT=3000
NODE_ENV=development
SERVICE_NAME=resource-health-checker

# Database Configuration
# Comment out to use MemoryStore (in-memory, volatile)
DATABASE_URL=postgresql://rhc_user:rhc_password@localhost:5432/rhc_db
DATABASE_CACHE_ENABLED=true

# Security
INTERNAL_API_KEY=your-secret-api-key-here

# Localization
DEFAULT_LOCALE=pt-BR

# Catalog Configuration
CATALOG_FILE=/app/data/resource-catalog.json

# Resource Registry Integration
RESOURCE_REGISTRY_BASE_URL=http://localhost:3000/api/v1/orchestrator
RESOURCE_REGISTRY_API_KEY=
RESOURCE_REGISTRY_CACHE_SECONDS=30

# Scheduler Configuration
SCHEDULER_LOOP_SECONDS=30
SCHEDULER_JITTER_MAX_SECONDS=30

# Logging
LOG_LEVEL=info
